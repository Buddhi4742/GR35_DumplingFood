@model Dumpling_Food.Models.User.LoginModel

@{
    ViewData["Title"] = "userlogin";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}
<h1 class="header1">Log into your account</h1>

<div class="container">
    <hr />
    <div class="row">
        <div class="col"></div> @*remove this*@
        <div class="col">
            <div class="login-center">
                <form asp-controller="User" asp-action="Logincheck">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="userName" class="control-label"> Enter Usename Here</label>
                        <input asp-for="userName" class="form-control" />
                        <span asp-validation-for="userName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="password" class="control-label">Enter Password Here</label>
                        <input asp-for="password" class="form-control" />
                        <span asp-validation-for="password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Forgot Password" class="btn btn-primary" />
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col"></div> @*remove this*@
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
