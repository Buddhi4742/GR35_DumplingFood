<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dumpling_Food</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-lg fixed-top navbar-light ">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="~/lib/Assets/images/logo.png" alt="" width="51" height="40" class="d-inline ">
                <h4 class="logo-text">Dumpling Food</h4>
            </a>
            <!--li class="nav-item"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>-->
            <div class="nav-menu nav-pills d-lg-block">
                <ul class="navbar-nav ml-auto ">
                    <li class="nav-item">
                        <a asp-action="Dashboard" asp-controller="Inventory" class="btn btn-link btn-sm text-dark">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="Inventory" asp-controller="Inventory" class="btn btn-link btn-sm text-dark">Inventory Table</a>
                    </li>
                    <li class="nav-item">
                        <a asp-action="DepletionReports" asp-controller="Inventory" class="btn btn-link btn-sm text-dark">Depletion Reports </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-block btn-sm btn-danger align-bottom">Logout</a>
                    </li>
                </ul>
            </div>
                <!-- nav-menu -->
        </div>
    </nav>
    
    


    <div class="body-content">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
