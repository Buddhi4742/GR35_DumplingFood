@{
    ViewData["Title"] = "Manager Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="text-center">
    <h1 class="display-4">Welcome to Manager Dashboard</h1>
    <div class="mdccontainer">

        <div class="dashboardcard">
            <div class="mdcface face1">
                <div class="mdccontent">
                    <span class="stars"></span>
                    <h2 class="crdorders">Orders</h2>
                    <p class="crdorders">Number : 285</p>
                </div>
            </div>
            <div class="mdcface face2">
                <h2>Orders</h2>
            </div>
        </div>

        <div class="dashboardcard">
            <div class="mdcface face1">
                <div class="mdccontent">
                    <span class="stars"></span>
                    <h2 class="crdmenus">Menu</h2>
                    <p class="crdmenus">Number of menus: 5</p>
                </div>
            </div>
            <div class="mdcface face2">
                <h2>Menus</h2>
            </div>
        </div>

        <div class="dashboardcard">
            <div class="mdcface face1">
                <div class="mdccontent">
                    <span class="stars"></span>
                    <h2 class="crdcustomers">Customers</h2>
                    <p class="crdcustomers">Number: 500</p>
                </div>
            </div>
            <div class="mdcface face2">
                <h2>Customers</h2>
            </div>
        </div>
        <div class="dashboardcard">
            <div class="mdcface face1">
                <div class="mdccontent">
                    <span class="stars"></span>
                    <h2 class="crdincome">Income</h2>
                    <p class="crdincome">Total Income : Rs. 340,000</p>
                </div>
            </div>
            <div class="mdcface face2">
                <h2>Income</h2>
            </div>
        </div>
    </div>
</div>
