@{
    ViewData["Title"] = "Customer_Dash Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: Arial;
            color: black;
            overflow:scroll;
        }

        .split {
            height: 100%;
            width: 50%;
            position: fixed;
            z-index: 1;
            top: 0;
            overflow-x: scroll;
            padding-top: 20px;
        }

        .left {
            top:10px;
            left: 0;
         
        }

        .right {
            top:100px;
            right: 0;
          
        }

        .centered {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }
            .centered1 img {
              
                align-items:center;
            }
        #order {
            border: 1px solid;
            padding: 10px;
            box-shadow: 5px 10px red;
        }
        .button {
            margin-top:50px;
            background-color: #aa381e;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }

       

    </style>
</head>
<body>

    <div class="split left">
        <div class="centered">
            <p>Dear <split>Rolex!</split></p>
            <h2>We are very happy  to have you as a customer!</h2>

            <div id="order">
                <p>You ordered 2 times!</p>
                <button type="button" class="button"> Order Food </button>

            </div>



        </div>
    </div>

    <div class="split right">
        <div class="centered1">
            <p><img src="~/lib/Images/home.png" width="500" height="500" /></p>
        </div>
    </div>



   



</body>
</html>